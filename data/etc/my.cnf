[mysqld]
# 禁用 DNS 解析，避免连接延迟
skip-name-resolve

# 数据目录，存储数据库文件的路径
datadir=/var/lib/mysql

# UNIX 套接字文件的路径，用于本地连接
socket=/var/run/mysqld/mysqld.sock

# 指定安全文件操作的目录，例如 LOAD DATA INFILE 的目录
secure-file-priv=/var/lib/mysql-files

# 运行 MySQL 服务的用户
user=mysql

# 进程 ID 文件的位置
pid-file=/var/run/mysqld/mysqld.pid

[client]
# 客户端连接使用的 UNIX 套接字文件路径
socket=/var/run/mysqld/mysqld.sock

# 包含其他配置文件
!includedir /etc/mysql/conf.d/
